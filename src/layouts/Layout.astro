---
import Navbar from "@components/sections/Navbar.astro";
import Footer from "@components/sections/Footer.astro";
import Meta from "@components/Meta.astro";
import { SITE } from "@data/constants";
import "@styles/global.css";
import "@styles/map.css";

// Setting expected props
const {
  title = SITE.title,
  description = SITE.description,
  meta,
  structuredData,
  lang = "zh-Hant",
  customDescription = null,
  customOgTitle = null,
} = Astro.props;

// Interface to type-check the properties
interface Props {
  title?: string;
  description?: string;
  meta?: string;
  structuredData?: object;
  lang?: string;
  customDescription?: string | null;
  customOgTitle?: string | null;
}
---

<!doctype html>
<html lang={lang} class="scrollbar-hide lenis lenis-smooth scroll-pt-16">
  <head>
    <Meta
      meta={meta}
      structuredData={structuredData}
      customDescription={customDescription}
      customOgTitle={customOgTitle}
      description={description}
    />

    <title>{title}</title>

    <script is:inline>
      const isThemeDark =
        localStorage.getItem("theme") === "dark" ||
        (!("theme" in localStorage) &&
          window.matchMedia("(prefers-color-scheme: dark)").matches);

      if (isThemeDark) {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }

      const metaThemeColor = document.querySelector('meta[name="theme-color"]');
      if (isThemeDark) {
        metaThemeColor.setAttribute("content", "#1c2339");
      } else {
        metaThemeColor.setAttribute("content", "#c0c2d1");
      }
    </script>
  </head>

  <body
    class="bg-primary-100 text-primary-950 selection:bg-accent-300/90 selection:text-primary-900"
  >
    <div class="w-full">
      <Navbar />
      <div
        class="w-full overflow-x-hidden mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-16"
      >
        <main
          class="mx-auto max-w-screen-2xl px-2 sm:px-4 md:px-6 lg:px-[5%] lg:space-y-20 md:space-y-16 sm:space-y-12 space-y-10 md:pt-14 lg:pt-20"
        >
          <slot />
        </main>
      </div>
    </div>
    <Footer />

    <script type="module" is:inline>
      import Lenis from "https://esm.sh/@studio-freight/lenis";

      const lenis = new Lenis({
        duration: 1.2,
        smooth: true,
      });

      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }

      requestAnimationFrame(raf);
    </script>
  </body>
</html>
<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
